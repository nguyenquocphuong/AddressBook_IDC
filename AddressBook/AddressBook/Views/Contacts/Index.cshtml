@model IEnumerable<AddressBook.Models.Contact>
@{
    ViewBag.Title = "Contacts";
}
<h2>@ViewBag.Title</h2>

<form action="@Url.Action("Create", "Contacts", null, protocol: Request.Url.Scheme)">
    <button type="submit" class="btn btn-success">
        <i class="fa fa-plus"></i> Create New
    </button>
</form>
<br/>
<table class="table">
    <tr>
        <th>
            Contact
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>*@
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName), @Html.DisplayFor(modelItem => item.LastName)
                <br />
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a class="fa-link-button-edit" title="Edit" href="@Url.Action("Edit", "Contacts", new { id = item.Id }, protocol: Request.Url.Scheme)"><i class="fa fa-pencil fa-lg"></i></a>
                &nbsp;&nbsp;|&nbsp;&nbsp;
                <a class="fa-link-button-info" title="View Details" href="@Url.Action("Details", "Contacts", new { id = item.Id }, protocol: Request.Url.Scheme)"><i class="fa fa-info fa-lg"></i></a>
                &nbsp;&nbsp;|&nbsp;&nbsp;
                <a class="fa-link-button-delete" title="Delete" href="@Url.Action("Delete", "Contacts", new { id = item.Id }, protocol: Request.Url.Scheme)"><i class="fa fa-trash-o fa-lg"></i></a>
            </td>
        </tr>
    }
</table>
